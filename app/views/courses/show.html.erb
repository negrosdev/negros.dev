<div class="columns is-multiline">
  <div class="column if-full">
    <h1 class="title has-text-white"><%= @course.title %></h1>
  </div>
  <div class="column is-full">
    <div class="card clear">
      <div class="card-content clear">
        <div style="padding: 56.25% 0 0 0; position: relative">
          <iframe
            src="https://player.vimeo.com/video/507100532?title=0&byline=0&portrait=0"
            style="
              position: absolute;
              top: 0;
              left: 0;
              width: 100%;
              height: 100%;
            "
            frameborder="0"
            allow="autoplay; fullscreen; picture-in-picture"
            allowfullscreen
          ></iframe>
        </div>
        <script src="https://player.vimeo.com/api/player.js"></script>
      </div>
      <footer class="card-footer p-3 author">
        <figure class="image is-32x32">
          <img
            src="/assets/img/marcus.jpg"
            class="is-rounded"
            alt=""
          />
        </figure>
        <span class="has-text-white"><%= @course.author.name %></span>
      </footer>
    </div>
  </div>
</div>