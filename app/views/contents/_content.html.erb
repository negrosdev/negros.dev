<section class="contents">
  <% contents.each_slice(3) do |contents| %>
    <div class="grid">
      <% contents.each do |content| %>
        <a class="published_content" href="<%= content_path(content) %>">
          <article  data-category="Ruby">
            <h5> <%= content.name %>  </h5>
          </article>
        </a>
      <% end %>
    </div>
  <% end %>
</section>
